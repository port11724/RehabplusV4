<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Diagnostic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"><i class="bi bi-cpu"></i> System Diagnostic</h3>
                    </div>
                    <div class="card-body">
                        <h5><i class="bi bi-person"></i> Current User Information</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th>User ID:</th>
                                <td><%= user.id %></td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td><%= user.email %></td>
                            </tr>
                            <tr>
                                <th>Role:</th>
                                <td>
                                    <span class="badge bg-<%= user.role === 'ADMIN' ? 'danger' : user.role === 'PT' ? 'success' : 'info' %>">
                                        <%= user.role %>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Clinic ID:</th>
                                <td><%= user.clinic_id || 'N/A' %></td>
                            </tr>
                        </table>

                        <hr>

                        <h5><i class="bi bi-shield-check"></i> Appointments Access Check</h5>
                        <% if (user.role === 'ADMIN' || user.role === 'PT') { %>
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle"></i>
                                <strong>✅ YOU CAN ACCESS APPOINTMENTS</strong><br>
                                Your role (<%= user.role %>) has permission to view appointments.
                            </div>
                            <a href="/appointments" class="btn btn-primary">
                                <i class="bi bi-calendar-check"></i> Go to Appointments
                            </a>
                        <% } else { %>
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>⚠️ NO ACCESS TO APPOINTMENTS</strong><br>
                                Your role (<%= user.role %>) cannot access appointments.<br>
                                Only ADMIN and PT roles can access this feature.
                            </div>
                        <% } %>

                        <hr>

                        <h5><i class="bi bi-list-check"></i> Sidebar Links Test</h5>
                        <p>The following links should appear in your sidebar:</p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <i class="bi bi-speedometer2 text-primary"></i> Dashboard -
                                <span class="badge bg-success">Always visible</span>
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-people text-primary"></i> Patients -
                                <span class="badge bg-success">Always visible</span>
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-person-plus text-primary"></i> Register Patient -
                                <span class="badge bg-success">Always visible</span>
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-calendar-check text-primary"></i> Appointments -
                                <% if (user.role === 'ADMIN' || user.role === 'PT') { %>
                                    <span class="badge bg-success">✅ Visible for you</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">❌ Hidden (not your role)</span>
                                <% } %>
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-building text-primary"></i> Clinics -
                                <% if (user.role === 'ADMIN') { %>
                                    <span class="badge bg-success">✅ Visible for you</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">❌ Hidden (ADMIN only)</span>
                                <% } %>
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-person-gear text-primary"></i> Users -
                                <% if (user.role === 'ADMIN') { %>
                                    <span class="badge bg-success">✅ Visible for you</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">❌ Hidden (ADMIN only)</span>
                                <% } %>
                            </li>
                        </ul>

                        <hr>

                        <h5><i class="bi bi-code-square"></i> JavaScript Test</h5>
                        <button class="btn btn-info" onclick="testAPIs()">
                            <i class="bi bi-play-circle"></i> Test API Endpoints
                        </button>
                        <div id="apiResults" class="mt-3"></div>

                        <hr>

                        <div class="text-center">
                            <a href="/dashboard" class="btn btn-secondary">
                                <i class="bi bi-house"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
    }

    async function testAPIs() {
        const resultsDiv = document.getElementById('apiResults');
        resultsDiv.innerHTML = '<div class="alert alert-info">Testing APIs...</div>';

        const token = getCookie('authToken');
        const tests = [];

        // Test 1: Get Users API
        try {
            const res = await fetch('/api/users?role=PT', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            tests.push({
                name: 'GET /api/users?role=PT',
                status: res.ok ? 'success' : 'failed',
                code: res.status,
                data: res.ok ? await res.json() : null
            });
        } catch (e) {
            tests.push({
                name: 'GET /api/users?role=PT',
                status: 'error',
                error: e.message
            });
        }

        // Test 2: Get Clinics API
        try {
            const res = await fetch('/api/clinics', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            tests.push({
                name: 'GET /api/clinics',
                status: res.ok ? 'success' : 'failed',
                code: res.status,
                data: res.ok ? await res.json() : null
            });
        } catch (e) {
            tests.push({
                name: 'GET /api/clinics',
                status: 'error',
                error: e.message
            });
        }

        // Test 3: Get Appointments API
        try {
            const res = await fetch('/api/appointments', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            tests.push({
                name: 'GET /api/appointments',
                status: res.ok ? 'success' : 'failed',
                code: res.status,
                data: res.ok ? await res.json() : null
            });
        } catch (e) {
            tests.push({
                name: 'GET /api/appointments',
                status: 'error',
                error: e.message
            });
        }

        // Display results
        let html = '<div class="card"><div class="card-body">';
        html += '<h6>API Test Results:</h6>';
        tests.forEach(test => {
            const badgeClass = test.status === 'success' ? 'success' : 'danger';
            html += `
                <div class="mb-2">
                    <span class="badge bg-${badgeClass}">${test.status.toUpperCase()}</span>
                    <strong>${test.name}</strong>
                    ${test.code ? `(${test.code})` : ''}
                    ${test.error ? `<br><small class="text-danger">${test.error}</small>` : ''}
                    ${test.data ? `<br><small class="text-muted">Returned ${Array.isArray(test.data) ? test.data.length : 'N/A'} items</small>` : ''}
                </div>
            `;
        });
        html += '</div></div>';
        resultsDiv.innerHTML = html;
    }
    </script>
</body>
</html>